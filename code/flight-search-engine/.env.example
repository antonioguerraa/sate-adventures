# Database
DATABASE_URL="file:./prisma/flight-search.db"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# ============================================
# FLIGHT DATA PROVIDERS
# ============================================

# Amadeus (GDS) - RECOMMENDED TO START
# Sign up at: https://developers.amadeus.com/register
# Free tier: 500 API calls/month
AMADEUS_API_KEY=
AMADEUS_API_SECRET=
AMADEUS_ENVIRONMENT=test # Use 'test' for sandbox, 'production' for live

# Kiwi.com (Tequila API)
# Sign up at: https://tequila.kiwi.com/portal/register
# Good for low-cost carriers
KIWI_API_KEY=

# Travelpayouts (Aviasales)
# Sign up at: https://www.travelpayouts.com
# Free tier: 1000 requests/day
TRAVELPAYOUTS_TOKEN=
TRAVELPAYOUTS_MARKER=your_marker_id

# Duffel
# Sign up at: https://duffel.com
# Modern API with NDC content
DUFFEL_ACCESS_TOKEN=
DUFFEL_TEST_MODE=true

# RapidAPI (for Skyscanner, AeroDataBox, etc.)
# Sign up at: https://rapidapi.com
RAPIDAPI_KEY=

# FlightAPI
# Sign up at: https://flightapi.io
FLIGHTAPI_KEY=

# ============================================
# OPTIONAL: AIRLINE DIRECT APIs
# ============================================

# Lufthansa Open API
# Register at: https://developer.lufthansa.com
LUFTHANSA_CLIENT_ID=
LUFTHANSA_CLIENT_SECRET=

# Air France-KLM
# Register at: https://developer.airfranceklm.com
AIRFRANCE_API_KEY=

# ============================================
# APPLICATION SETTINGS
# ============================================

# Search Settings
ENHANCED_SEARCH=true
MAX_CONCURRENT_SEARCHES=10
SEARCH_TIMEOUT=30000

# Performance
CACHE_ENABLED=true
MONITORING_ENABLED=true

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Sentry (Optional - for error tracking)
SENTRY_DSN=